@using Broadcast.Dashboard
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Broadcast Asp.Net Sample</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />

    @Html.Raw(BroadcastConsole.AppendConsoleIncludes(new ConsoleOptions{Position = ConsolePosition.BottomRight}))
    
</head>
<body>
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container">
			@Html.ActionLink("Broadcast", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						@Html.ActionLink("Home", "Index", "Home")
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>
<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

<footer class="border-top footer text-muted">
	<div class="container">
		&copy; @DateTime.Now.Year - Broadcast
	</div>
</footer>
</body>
</html>
