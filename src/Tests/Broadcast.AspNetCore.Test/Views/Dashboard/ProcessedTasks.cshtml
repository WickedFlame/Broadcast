@using Broadcast.EventSourcing
@model DashboardModel

@{
	ViewData["Title"] = "Processed Tasks";
	Layout = "_Layout";
}

<div class="broadcast-main">
	<div>
		<table class="table processed" id="tasklist">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">State</th>
					<th scope="col">IsRecurring</th>
					<th scope="col">Interval</th>
					<th scope="col">Server</th>
					<th scope="col">Started</th>
					<th scope="col">Duration</th>
				</tr>
			</thead>
			<tbody>
			@foreach (var task in Model.Monitor.Tasks.Where(t => t.State == TaskState.Processed))
			{
				<tr id="task_@(task.Id)">
					<td>@task.Id</td>
					<td>@task.Name</td>
					<td id="state_@(task.Id)">@task.State</td>
					<td>@task.IsRecurring</td>
					<td>@(task.Time != null ? TimeSpan.FromMilliseconds(task.Time.Value).ToString() : string.Empty)</td>
					<td id="server_@(task.Id)">@task.Server</td>
					<td id="start_@(task.Id)">@task.Start</td>
					<td id="duration_@(task.Id)">@(task.Duration != null ? TimeSpan.FromMilliseconds(task.Duration.Value).ToString() : string.Empty)</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>

